<?xml version="1.0" encoding="utf-8"?>
<project>
	<!-- NMML reference: https://gist.github.com/1763850 -->
	
	<!-- metadata, make sure 'package' is at least 3 segments (ie. com.mycompany.myproject) -->
	<meta title="fullfrontal" package="com.grapefrukt.apps.fullfrontal.fullfrontal" version="1.0.0" company="Martin Jonasson, m@grapefrukt.com" />
	
	<!-- output -->
	<app main="com.grapefrukt.apps.fullfrontal.Main" file="fullfrontal" path="bin" />
	
	<window background="#000000" fps="60" />
	<window width="320" height="240" />
	<window orientation="landscape" vsync="true" antialiasing="0" if="cpp" />
	
	<!-- classpath, haxe libs -->
	<source path="src" />
	<source path="lib" />
	<haxelib name="openfl" />
	<haxelib name="actuate" />
	<haxelib name="grapetools" />
	<haxelib name="inputter" />
	
	<!-- assets -->
	<icon path="assets/openfl.svg" />
	<assets path="assets/images" rename="images" include="*.png" />
	<assets path="assets/config" rename="config" include="*.cfg" />
	
	<haxedef name="RENDER_TILE" />
	
	<!-- optimize output
	<haxeflag name="-dce full" /> -->
	
</project>